//--------------------------------------------------------------------------------------
// Vertex shader used for screen-space post-processing
//--------------------------------------------------------------------------------------
float4 main(uint vid : SV_VERTEXID) : SV_POSITION
{
	float2 vTex = { (vid << 1) & 2, vid & 2 };
	return float4(vTex * float2(2.0, -2.0) + float2(-1.0, 1.0), 0, 1.0);
}
